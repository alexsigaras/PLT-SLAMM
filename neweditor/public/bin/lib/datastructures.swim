class Str do

	val = "";
	type = 0;
	
	fun lowercase() do
		return lower(val);
	end

	fun uppercase() do
		return upper(val);
	end

	fun length() do
		return len(val);
	end

	fun split(x) do
		return splt(val, x);
	end

	fun replace(x,y) do
		return repl(val, x, y);
	end

	fun contains(x) do
		return cnt(val, x);
	end

	fun startswith(x) do
		return strtwith(val, x);
	end

	fun endswith(x) do
		return endwith(val, x);
	end

	fun matches(regex) do
		return match(val, regex);
	end

	fun matchall(regex) do
		return matchall(val, regex);
	end
end

