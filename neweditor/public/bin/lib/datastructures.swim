class List do
	val = 0;
	type="List";

	fun getElement(x) do 
		i=0; 
		for each element in val do 
			if(i==x) do 
				return element;
			end
			i++; 
		end
	end
	fun length() do 
		i=0; 
		for each element in val do 
			i++; 
		end 
		return i;
	end
	fun append(x) do
		this.val = val + [x];
	end
	fun prepend(x) do
		this.val = [x] + val;
	end
end

class Dict do
	val= 0;
	keys = 0;
	vals = 0;
	type="Dict";
	
	fun length() do 
		i=0; 
		for each element in val do
			i++; 
		end 
		return i;
	end
	fun getValue(key) do
		i = 0;
		for each element in val do
			if(key == element) do
				j = 0;
				for each value in vals do
					if(j==i) do
						return value;
					end
					j++;
				end
			end
			i++;			
		end
	end
end

